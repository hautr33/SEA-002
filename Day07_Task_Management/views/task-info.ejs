<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <title>Task Details</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body class="p-4">
    <div class="container">
        <div class="row">
            <div class="col-6">
                <h2 class="mb-4">Task Details</h2>
            </div>
            <div class="col-6 text-end">
                <form action="/tasks/delete/<%= task.id %>" method="POST" style="display: inline;">
                    <button type="submit" class="btn btn-outline-danger">Delete</button>
                </form>
            </div>
        </div>
        <% if (typeof message !=='undefined' && message) { %>
            <div class="alert alert-danger" role="alert">
                <%= message %>
            </div>
            <% } %>
                <form action="/tasks/update/<%= task.id %>" method="POST">
                    <div class="card">
                        <div class="card-body">
                            <div class="input-group flex-nowrap mb-3">
                                <span class="col-2 input-group-text" id="addon-wrapping">Task ID</span>
                                <input type="text" class="col-10 form-control" placeholder="Task ID"
                                    aria-label="Task name" name="id" value="<%= task.id %>"
                                    aria-describedby="addon-wrapping" disabled>
                            </div>
                            <div class="input-group flex-nowrap mb-3">
                                <span class="col-2 input-group-text" id="addon-wrapping">Task Name</span>
                                <input type="text" class="col-10 form-control" placeholder="Task name"
                                    aria-label="Task name" name="name" value="<%= task.name %>"
                                    aria-describedby="addon-wrapping" required>
                            </div>
                            <div class="input-group flex-nowrap mb-3">
                                <span class="col-2 input-group-text" id="addon-wrapping">Task Status</span>
                                <select name="status" class="form-control">
                                    <option value="">Select Status</option>
                                    <option value="To Do" <%=task.status==='To Do' ? 'selected' : '' %>>To Do
                                    </option>
                                    <option value="In Progress" <%=task.status==='In Progress' ? 'selected' : '' %>
                                        >In Progress
                                    </option>
                                    <option value="Done" <%=task.status==='Done' ? 'selected' : '' %>
                                        >Done
                                    </option>
                                </select>
                            </div>
                            <div class="input-group flex-nowrap mb-3">
                                <span class="col-2 input-group-text" id="addon-wrapping">Task Tag</span>
                                <input type="text" class="col-10 form-control" placeholder="Task tag"
                                    aria-label="Task tag" name="tag" value="<%= task.tag %>"
                                    aria-describedby="addon-wrapping">
                            </div>
                            <div class="input-group flex-nowrap mb-3">
                                <span class="col-2 input-group-text" id="addon-wrapping">Task Priority</span>
                                <select name="priority" class="form-control">
                                    <option value="">Select Priorities</option>
                                    <option value="Low" <%=task.priority==='Low' ? 'selected' : '' %>>Low
                                    </option>
                                    <option value="Medium" <%=task.priority==='Medium' ? 'selected' : '' %>
                                        >Medium
                                    </option>
                                    <option value="High" <%=task.priority==='High' ? 'selected' : '' %>
                                        >High
                                    </option>
                                </select>
                            </div>
                            <div class="input-group flex-nowrap mb-3">
                                <span class="col-2 input-group-text" id="addon-wrapping">Estimate Time</span>
                                <input type="text" class="col-10 form-control" placeholder="Enter number"
                                    name="estimateTime" value="<%= task.estimateTime %>"
                                    aria-describedby="addon-wrapping" required>
                            </div>
                            <div class="input-group flex-nowrap mb-3">
                                <span class="col-2 input-group-text" id="addon-wrapping">Due Date</span>
                                <input type="date" class="col-10 form-control" placeholder="Select date" name="dueDate"
                                    value="<%= task.dueDate %>" aria-describedby="addon-wrapping" required>
                            </div>
                            <div class="input-group flex-nowrap mb-3">
                                <span class="col-2 input-group-text" id="addon-wrapping">Owner ID</span>
                                <select class="form-control" id="ownerId" name="ownerId" required>
                                    <option value="">Select Owner</option>
                                    <% owners.forEach(ownerId=> { %>
                                        <option value="<%= ownerId %>" <%=task.ownerId===ownerId ? 'selected' : '' %>>
                                            <%= ownerId %>
                                        </option>
                                        <% }); %>
                                </select>
                            </div>
                            <div class="input-group flex-nowrap mb-3">
                                <span class="col-2 input-group-text" id="addon-wrapping">Story ID</span>
                                <select class="form-control" id="storyId" name="storyId" required>
                                    <option value="">Select Story</option>
                                    <% stories.forEach(storyId=> { %>
                                        <option value="<%= storyId %>" <%=task.storyId===storyId ? 'selected' : '' %>>
                                            <%= storyId %>
                                        </option>
                                        <% }); %>
                                </select>
                            </div>
                            <div class="row">
                                <div class="col-6">
                                    <a href="/" class="btn btn-secondary">Back to Home</a>
                                </div>
                                <div class="col-6 text-end">
                                    <button type="submit" class="btn btn-outline-success">Update Task</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>