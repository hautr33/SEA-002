<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>Add New Task</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body class="p-4">
    <h1 class="text-center mb-4">Task Management</h1>
    <ul class="nav justify-content-center">
        <li class="nav-item">
            <a class="nav-link active" aria-current="page" href="/">Home</a>
        </li>
        <li class="nav-item">
            <a class="nav-link active" aria-current="page" href="/tasks/add">Add Tag</a>
        </li>

    </ul>
    <div class="container">
        <% const message=(typeof string !=='undefined' && message) || '' ; %>
            <div class="row justify-content-center">
                <div class="col-6 p-5 bg-light card">
                    <h2 class="mb-4">Add New Task</h2>
                    <% if (typeof message !=='undefined' && message) { %>
                        <div class="alert alert-danger" role="alert">
                            <%= message %>
                        </div>
                        <% } %>
                            <form action="/tasks/add" method="POST">
                                <!-- Task Name -->
                                <div class="mb-3">
                                    <label for="name" class="form-label">Task Name</label>
                                    <input type="text" class="form-control" id="name" name="name" required>
                                </div>

                                <!-- Tag -->
                                <div class="mb-3">
                                    <label for="tag" class="form-label">Tag</label>
                                    <input type="text" class="form-control" id="tag" name="tag">
                                </div>

                                <!-- Priority -->
                                <div class="mb-3">
                                    <label for="priority" class="form-label">Priority</label>
                                    <select class="form-select" id="priority" name="priority" required>
                                        <option value="Low">Low</option>
                                        <option value="Medium">Medium</option>
                                        <option value="High">High</option>
                                    </select>
                                </div>

                                <!-- Estimate Time -->
                                <div class="mb-3">
                                    <label for="estimateTime" class="form-label">Estimate Time (e.g., 2h, 1d)</label>
                                    <div class="row g-2">
                                        <!-- Số lượng -->
                                        <div class="col-md-6">
                                            <input type="number" class="form-control" name="estimateValue" min="1"
                                                required placeholder="Enter number">
                                        </div>
                                        <!-- Đơn vị -->
                                        <div class="col-md-6">
                                            <select class="form-select" name="estimateUnit" required>
                                                <option value="h">Hours</option>
                                                <option value="d">Days</option>
                                                <option value="w">Weeks</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>

                                <!-- Due Date -->
                                <div class="mb-3">
                                    <label for="dueDate" class="form-label">Due Date</label>
                                    <input type="date" class="form-control" id="dueDate" name="dueDate" required>
                                </div>

                                <!-- Owner ID -->
                                <div class="mb-3">
                                    <label for="ownerId" class="form-label">Owner ID</label>
                                    <select class="form-select" id="ownerId" name="ownerId" required>
                                        <option value="">Select Owner</option>
                                        <% owners.forEach(ownerId=> { %>
                                            <option value="<%= ownerId %>">
                                                <%= ownerId %>
                                            </option>
                                            <% }); %>
                                    </select>
                                </div>

                                <!-- Story ID -->
                                <div class="mb-3">
                                    <label for="storyId" class="form-label">Story ID</label>
                                    <select class="form-select" id="storyId" name="storyId" required>
                                        <option value="">Select Story</option>
                                        <% stories.forEach(storyId=> { %>
                                            <option value="<%= storyId %>">
                                                <%= storyId %>
                                            </option>
                                            <% }); %>
                                    </select>
                                </div>

                                <!-- Submit -->
                                <button type="submit" class="btn btn-primary">Add Task</button>
                            </form>
                </div>
            </div>
    </div>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>